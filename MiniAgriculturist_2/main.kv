                            on_release: 
                                app.login_fun()
                                app.set_values_after_login()
                                root.manager.transition.direction = 'left'

                    FloatLayout:
                        pos_hint: {'top':0.6}

                        MDLabel:
                            font_size:15
                            theme_text_color: "Custom"
                            text_color: 80/256, 45/256, 142/256, 1
                            text: "Forgot password?"
