                        text_color: 80/256, 45/256, 142/256, 1
                        text: "Remember me"
                        halign: "center"
                        pos_hint:{'center_x':0.33, 'center_y':0.49}

                    BoxLayout:
                        orientation: "vertical"
                        size_hint_y: None
                        height: self.minimum_height
                        spacing: dp(30)
                        pos_hint: {'top':0.42}

                        MDFillRoundFlatButton:
                            text:'Login'
                            size_hint_x:0.8
                            font_size:20
                            pos_hint:{'center_x':0.5, 'center_y':0.3}
