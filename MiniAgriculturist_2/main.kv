                            halign: "center"

                    BoxLayout:
                        orientation: "vertical"
                        size_hint_y: None
                        spacing: dp(30)
                        pos_hint: {'top':0.74}
                        

                        MDTextFieldRound:
                            id: user_id
                            hint_text:"Enter user name"
                            icon_right:"account"
                            normal_color: app.theme_cls.bg_dark
                            pos_hint:{'center_x':0.5, 'center_y':0.5} 
                            font_size:15
                            size_hint_x:0.7
                            size_hint_y:0.07

                        MDTextFieldRound:
                            id: password_t
                            hint_text:"Enter password"
                            icon_right:"eye-off"
                            password: True
                            normal_color: app.theme_cls.bg_dark
                            pos_hint:{'center_x':0.5, 'center_y':0.65} 
                            font_size:15
                            size_hint_x:0.7
                            size_hint_y:0.07

                    MDIconButton:
                        icon:''
                        halign: 'center'
                        pos_hint:{'center_x':0.15,'center_y':0.49}
                        MDCheckbox:
                            on_active: print("checked as remember")
                            active : False

                    MDLabel:
                        font_size:15
